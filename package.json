{
  "name": "simple-tinder-like",
  "version": "1.0.0",
  "engines": {
    "node": "20"
  },
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "concurrently --kill-others \"tsc -w\" \"tsc-alias -w\" \"node --experimental-specifier-resolution=node lib/index.js\"",
    "start": "npm run build && node --experimental-specifier-resolution=node lib/index.js",
    "deploy": "firebase deploy --only functions"
  },
