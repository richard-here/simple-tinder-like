  "description": "",
  "dependencies": {
    "dotenv": "^16.4.5",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.1.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "mongoose": "^8.8.0",
    "serialize-error": "^11.0.3",
    "tiny-invariant": "^1.3.3",
    "tsc-alias": "^1.8.10"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
